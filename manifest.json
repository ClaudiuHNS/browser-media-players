{
    "manifest_version": 2,
    "name": "browser-media-keys",
    "version": "1.0.0",
    "author": "Carlin Scott",
    "homepage_url": "https://github.com/carlin-q-scott/browser-media-keys",
    "description": "Lets you control many popular website media players using media key events",
    "icons": {
        "64": "icon.png"
    },
    "applications": {
        "gecko": {
            "id": "jid1-4GP7z3tkUd3Tzg@jetpack"
        }
    },
    "background": {
        "page": "index.html"
    },
    "permissions": ["storage"],
    "commands": {
        "MediaPlayPause": {
            "description": "toggles play state of the last active media website",
            "suggested_key": {
                "default": "MediaPlayPause"
            },
            "global": true
        },
        "MediaNextTrack": {
            "description": "plays the next track for the last active media website",
            "suggested_key": {
                "default": "MediaNextTrack"
            },
            "global": true
        },
        "MediaPrevTrack": {
            "description": "plays the previous track for the last active media website",
            "suggested_key": {
                "default": "MediaPrevTrack"
            },
            "global": true
        },
        "MediaStop": {
            "description": "stops playback of the last active media website",
            "suggested_key": {
                "default": "MediaStop"
            },
            "global": true
        }
    },
    "page_action": {
        "browser_style": true,
        "default_icon": {
          "19": "img/icon-inactive-19.png",
          "38": "img/icon-inactive-38.png"
        },
        "default_title": "Pin Media Keys to this tab"
    },
    "content_scripts": [
        {
