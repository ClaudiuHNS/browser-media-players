{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "reloadOnChange": {
                "watch": "${workspaceFolder}/**/*.{js,json,html}",
                "ignore": "**/node_modules/**"
            },
            "reloadOnAttach": true,
            "addonPath": "${workspaceFolder}",
            "url": "file://${workspaceFolder}/tests/pandora.com.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Attach to Firefox",
            "type": "firefox",
            "request": "attach",
            "addonPath": "${workspaceFolder}"
        },
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "file://${workspaceFolder}/tests/pandora.com.html"
        },
        {
            "name": "Launch Opera",
            "type": "chrome",
            "request": "launch",
            "runtimeExecutable": "${env:USERPROFILE}\\AppData\\Local\\Programs\\Opera\\launcher.exe",
            "url": "file://${workspaceFolder}/tests/pandora.com.html"
        }
    ]
}