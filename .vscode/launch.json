{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "reloadOnChange": {
                "watch": "${workspaceFolder}/dist/firefox/**.{js,json,html}"
            },
            "reloadOnAttach": true,
            "addonPath": "${workspaceFolder}\\dist\\firefox",
            "preLaunchTask": "build firefox",
            "skipFiles": [
                "http?(s):/**"
            ]
        },
        {
            "name": "Attach to Firefox",
            "type": "firefox",
            "request": "attach",
            "reloadOnChange": {
                "watch": "${workspaceFolder}/dist/firefox/**.{js,json,html}"
            },
            "reloadOnAttach": true,
            "port": 6005,
            "addonPath": "${workspaceFolder}\\dist\\firefox",
            "preLaunchTask": "build firefox",
            "skipFiles": [
                "http?(s):/**"
            ]
        },
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceFolder}/tests/pandora.com.html",
            "preLaunchTask": "build chrome"
        },
        {
            "name": "Launch Opera",
            "type": "chrome",
            "request": "launch",
            "runtimeExecutable": "${env:USERPROFILE}\\AppData\\Local\\Programs\\Opera\\launcher.exe",
            "file": "${workspaceFolder}/tests/pandora.com.html",
            "preLaunchTask": "build opera"
        }
    ]
}