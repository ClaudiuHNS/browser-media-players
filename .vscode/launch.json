{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "reloadOnChange": {
                "watch": "${workspaceFolder}/**/*.js",
                "ignore": "**/node_modules/**"
            },
            "addonType": "webExtension",
            "addonPath": "${workspaceFolder}"
        },
        {
            "name": "Attach to Firefox",
            "type": "firefox",
            "request": "attach",
            "port": 6005,
            "addonType": "webExtension",
            "addonPath": "${workspaceFolder}"
        },
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
        },
        {
            "name": "Launch Opera",
            "type": "chrome",
            "request": "launch",
            "runtimeExecutable": "${env:USERPROFILE}\\AppData\\Local\\Programs\\Opera\\launcher.exe"
        }
    ]
}