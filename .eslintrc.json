{
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "rules": {
        "indent": [
            "warn",
            4,
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [0],
        "no-async-promise-executor": [0],
        "no-console": [1],
        "no-misleading-character-class": [0],
        "no-useless-catch": [0],
        "func-style": [
            "warn",
            "declaration",
            { "allowArrowFunctions": true }
        ],
        "require-atomic-updates": [0]
    }
}